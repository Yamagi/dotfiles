<openbox_config xmlns="http://openbox.org/3.4/rc"
	xmlns:xi="http://www.w3.org/2001/XInclude">

	<!-- How many pixel resistance is there
		 between two pixels until they'll
		 overlap. -->
	<resistance>

		<!-- 10 pixel between normal windows -->
		<strength>10</strength>

		<!-- 20 pxiel between windows
			 and the screen edge -->
		<screen_edge_strength>20</screen_edge_strength>
	</resistance>

	<!-- How to focus windows? -->
	<focus>

		<!-- Always focus new windows -->
		<focusNew>yes</focusNew>

		<!-- The focus follows the mouse -->
		<followMouse>yes</followMouse>

		<!-- When changing to a new desktop, focus
			 the window under the mouse instead of
			 the last focused window. -->
		<focusLast>no</focusLast>

		<!-- Move focus under the mouse, even
			 when the mouse is not moving -->
		<underMouse>yes</underMouse>

		<!-- When followMouse is enabled, the mouse
			 must be inside the window for this many
			 milliseconds (1000 = 1 sec) before moving
			 focus to it -->
		<focusDelay>0</focusDelay>

		<!-- When followMouse is enabled, and a window is
			 given focus by moving the mouse into it, also
			 raise the window -->
		<raiseOnFocus>no</raiseOnFocus>
	</focus>

	<!-- Windows placement rules -->
	<placement>

		<!-- Smart windows placement instead
			 of stupid "under the mouse" -->
		<policy>Smart</policy>

		<!-- Whether to place windows in the center
			 of the free area found or the top left
			 corner -->
		<center>no</center>

		<!-- With Smart placement on a multi-monitor
			 system, try to place new windows on
			 the monitor where the mouse is -->
		<monitor>Mouse</monitor>

		<!-- Openbox should place popups on the
			 monitor where the mouse is, the
			 monitor with the mouse is the
			 primary one. -->
		<primaryMonitor>Mouse</primaryMonitor>
	</placement>

	<!-- The theme to use -->
	<theme>

		<!-- Name of the Theme to use. -->
		<name>breeze</name>

		<!-- Layout of the window title bar. Available
			 characters are NDSLIMC, each can occur at
			 most once:
			  N: window icon
			  L: window label (AKA title).
			  I: iconify
			  M: maximize
			  C: close
			  S: shade (roll up/down)
			  D: omnipresent (on all desktops). -->
		<titleLayout>CMILN</titleLayout>

		<!-- Draw the window border even if
			 the decoration is switched off -->
		<keepBorder>yes</keepBorder>

		<!-- Do not animate the iconify -->
		<animateIconify>no</animateIconify>

		<!-- Font in which the title of an
			 active window is drawn -->
		<font place="ActiveWindow">
			<name>DejaVu Sans</name>
			<size>8</size>
			<weight>normal</weight>
			<slant>normal</slant>
		</font>

         <!-- Font in which the title of an
			  active window is drawn -->
		<font place="InactiveWindow">
			<name>DejaVu Sans</name>
			<size>8</size>
			<weight>normal</weight>
			<slant>normal</slant>
		</font>

		<!-- Font in which the menu
			 header is drawn -->
		<font place="MenuHeader">
			<name>DejaVu Sans</name>
			<size>8</size>
			<weight>normal</weight>
			<slant>normal</slant>
		</font>

		<!-- Font in which menu
			 items are drawn -->
		<font place="MenuItem">
			<name>DejaVu Sans</name>
			<size>9</size>
			<weight>normal</weight>
			<slant>normal</slant>
		</font>

		<!-- Font which used in the OSD -->
		<font place="OnScreenDisplay">
			<name>DejaVu Sans</name>
			<size>9</size>
			<weight>normal</weight>
			<slant>normal</slant>
		</font>
	</theme>

	<!-- Desktop configuration. Can be altered
		 at runtime by using pager. -->
	<desktops>

		<!-- Number of desktops -->
		<number>12</number>

		<!-- The first desktop -->
		<firstdesk>1</firstdesk>

		<!-- The names of the desktops -->
		<names>
			<name>01</name>
			<name>02</name>
			<name>03</name>
			<name>04</name>
			<name>05</name>
			<name>06</name>
			<name>07</name>
			<name>08</name>
			<name>09</name>
			<name>10</name>
			<name>11</name>
			<name>12</name>
		</names>

		<!-- Time in miliseconds to show the
			 desktop change popup -->
		<popupTime>875</popupTime>
	</desktops>

	<!-- Window resizing -->
	<resize>

		<!-- Always draw the window content -->
		<drawContents>yes</drawContents>

		<!-- Always show the window size popup -->
		<popupShow>Always</popupShow>

		<!-- And place it at the window center -->
		<popupPosition>Center</popupPosition>
	</resize>

	<!-- Reserved space, not covered by
		 maximized windows. All values
		 in pixel. -->
	<margins>

		<!-- Top -->
		<top>0</top>

		<!-- Bottom -->
		<bottom>0</bottom>

		<!-- Left -->
		<left>0</left>

		<!-- Right -->
		<right>0</right>
	</margins>

	<!-- Keyboard settings, e.g. shortcuts -->
	<keyboard>

		<!-- Move to left desktop -->
		<keybind key="W-Left">
			<action name="DesktopLeft">

				<!-- Wrap from last to first desktop -->
				<wrap>yes</wrap>
			</action>
		</keybind>

		<!-- Move to right desktop -->
		<keybind key="W-Right">
			<action name="DesktopRight">

				<!-- Wrap from last to first desktop -->
				<wrap>yes</wrap>
			</action>
		</keybind>

		<!-- Change to desktop 1 -->
		<keybind key="W-F1">
			<action name="Desktop">
				<desktop>1</desktop>
			</action>
		</keybind>

		<!-- Change to desktop 2 -->
		<keybind key="W-F2">
			<action name="Desktop">
				<desktop>2</desktop>
			</action>
		</keybind>

		<!-- Change to desktop 3 -->
		<keybind key="W-F3">
			<action name="Desktop">
				<desktop>3</desktop>
			</action>
		</keybind>

		<!-- Change to desktop 4 -->
		<keybind key="W-F4">
			<action name="Desktop">
				<desktop>4</desktop>
			</action>
		</keybind>

		<!-- Change to desktop 5 -->
		<keybind key="W-F5">
			<action name="Desktop">
				<desktop>5</desktop>
			</action>
		</keybind>

		<!-- Change to desktop 6 -->
		<keybind key="W-F6">
			<action name="Desktop">
				<desktop>6</desktop>
			</action>
		</keybind>

		<!-- Change to desktop 7 -->
		<keybind key="W-F7">
			<action name="Desktop">
				<desktop>7</desktop>
			</action>
		</keybind>

		<!-- Change to desktop 8 -->
		<keybind key="W-F8">
			<action name="Desktop">
				<desktop>8</desktop>
			</action>
		</keybind>

		<!-- Send current window to desktop 1 -->
		<keybind key="S-W-F1">
			<action name="SendToDesktop">
				<desktop>1</desktop>
			</action>
		</keybind>

		<!-- Send current window to desktop 2 -->
		<keybind key="S-W-F2">
			<action name="SendToDesktop">
				<desktop>2</desktop>
			</action>
		</keybind>

		<!-- Send current window to desktop 3 -->
		<keybind key="S-W-F3">
			<action name="SendToDesktop">
				<desktop>3</desktop>
			</action>
		</keybind>

		<!-- Send current window to desktop 4 -->
		<keybind key="S-W-F4">
			<action name="SendToDesktop">
				<desktop>4</desktop>
			</action>
		</keybind>

		<!-- Send current window to desktop 5 -->
		<keybind key="S-W-F5">
			<action name="SendToDesktop">
				<desktop>5</desktop>
			</action>
		</keybind>

		<!-- Send current window to desktop 6 -->
		<keybind key="S-W-F6">
			<action name="SendToDesktop">
				<desktop>6</desktop>
			</action>
		</keybind>

		<!-- Send current window to desktop 7 -->
		<keybind key="S-W-F7">
			<action name="SendToDesktop">
				<desktop>7</desktop>
			</action>
		</keybind>

		<!-- Send current window to desktop 8 -->
		<keybind key="S-W-F8">
			<action name="SendToDesktop">
				<desktop>8</desktop>
			</action>
		</keybind>

		<!-- Send current window to right desktop -->
		<keybind key="S-W-Right">
			<action name="SendToDesktop">
				<desktop>previous</desktop>
			</action>
		</keybind>

		<!-- Send current window to left desktop -->
		<keybind key="S-W-Left">
			<action name="SendToDesktop">
				<desktop>next</desktop>
			</action>
		</keybind>

		<!-- Current window always on top -->
		<keybind key="W-Prior">
			<action name="ToggleAlwaysOnTop"/>
		</keybind>

		<!-- Current window always on bottom -->
		<keybind key="W-Next">
			<action name="ToggleAlwaysOnBottom"/>
		</keybind>

		<!-- Maximize current window -->
		<keybind key="W-KP_5">
			<action name="ToggleMaximize"/>
		</keybind>

		<!-- Move window to the horizontal
			 upper 50% of the monitor -->
		<keybind key="W-KP_8">
			<action name="UnmaximizeFull"/>
			<action name="MoveResizeTo">
				<x>+-0</x>
				<y>+-0</y>
				<width>100%</width>
				<height>50%</height>
			</action>
		</keybind>

		<!-- Move window to the upper left
			 corner of the monitor -->
		<keybind key="W-KP_7">
			<action name="UnmaximizeFull"/>
			<action name="MoveResizeTo">
				<x>+-0</x>
				<y>+-0</y>
				<width>50%</width>
				<height>50%</height>
			</action>
		</keybind>

		<!-- Move window to the upper right
			 corner of the monitor -->
		<keybind key="W-KP_9">
			<action name="UnmaximizeFull"/>
			<action name="MoveResizeTo">
				<x>-0</x>
				<y>+-0</y>
				<width>50%</width>
				<height>50%</height>
			</action>
		</keybind>

		<!-- Move window to the horizontal
			 lower 50% of the monitor -->
		<keybind key="W-KP_2">
			<action name="UnmaximizeFull"/>
			<action name="MoveResizeTo">
				<x>+-0</x>
				<y>-0</y>
				<width>100%</width>
				<height>50%</height>
			</action>
		</keybind>

		<!-- Move window to the lower left
			 corner of the monitor -->
		<keybind key="W-KP_1">
			<action name="UnmaximizeFull"/>
			<action name="MoveResizeTo">
				<x>+-0</x>
				<y>-0</y>
				<width>50%</width>
				<height>50%</height>
			</action>
		</keybind>

		<!-- Move window to the lower right
			 corner of the monitor -->
		<keybind key="W-KP_3">
			<action name="UnmaximizeFull"/>
			<action name="MoveResizeTo">
				<x>-0</x>
				<y>-0</y>
				<width>50%</width>
				<height>50%</height>
			</action>
		</keybind>

		<!-- Move window to the vertical
			 left 50% of the monitor -->
		<keybind key="W-KP_4">
			<action name="UnmaximizeFull"/>
			<action name="MoveResizeTo">
				<x>+-0</x>
				<y>+-0</y>
				<width>50%</width>
				<height>100%</height>
			</action>
		</keybind>

		<!-- Move window to the vertical
			 right 50% of the monitor -->
		<keybind key="W-KP_6">
			<action name="UnmaximizeFull"/>
			<action name="MoveResizeTo">
				<x>-0</x>
				<y>+-0</y>
				<width>50%</width>
				<height>100%</height>
			</action>
		</keybind>

		<!-- Toogle "show desktop" -->
		<keybind key="W-KP_0">
			<action name="ToggleShowDesktop"/>
		</keybind>

		<!-- Window cycling -->
		<keybind key="W-Tab">
			<action name="NextWindow"/>
			<linear>yes</linear>
		</keybind>

		<!-- Switch to left window -->
		<keybind key="W-h">
			<action name="DirectionalCycleWindows">
				<direction>west</direction>
			</action>
		</keybind>

		<!-- Switch to right window -->
		<keybind key="W-l">
			<action name="DirectionalCycleWindows">
				<direction>east</direction>
			</action>
		</keybind>

		<!-- Switch to upper window -->
		<keybind key="W-k">
			<action name="DirectionalCycleWindows">
				<direction>north</direction>
			</action>
		</keybind>

		<!-- Switch to lower window -->
		<keybind key="W-j">
			<action name="DirectionalCycleWindows">
				<direction>south</direction>
			</action>
		</keybind>

		<!-- Execute terminal -->
		<keybind key="W-Return">
			<action name="Execute">
				<execute>urxvtc</execute>
			</action>
		</keybind>

		<!-- Execute terminal with vim -->
		<keybind key="W-v">
			<action name="Execute">
				<execute>urxvtc -fn "xft:Inconsolata:size=11" --perl-ext-common '' -e vim</execute>
			</action>
		</keybind>

		<!-- Lock screen -->
		<keybind key="S-W-l">
			<action name="Execute">
				<execute>xscreensaver-command -lock</execute>
			</action>
		</keybind>

		<keybind key="XF86ScreenSaver">
			<action name="Execute">
				<execute>xscreensaver-command -lock</execute>
			</action>
		</keybind>

		<!-- Exit / Quit -->
		<keybind key="S-W-e">
			<action name="exit">
				<prompt>yes</prompt>
			</action>
		</keybind>

		<!-- Restart -->
		<keybind key="S-W-r">
			<action name="restart">
				<prompt>yes</prompt>
			</action>
		</keybind>

		<!-- Run launcher -->
		<keybind key="S-W-Return">
			<action name="Execute">
				<execute>~/.config/openbox/run_dmenu.sh</execute>
			</action>
		</keybind>

		<!-- Toggle music playback -->
		<keybind key="W-space">
			<action name="Execute">
				<execute>mpc -h serioussam@/home/yamagi/.musicpd/socket toggle</execute>
			</action>
		</keybind>

		<keybind key="XF86AudioPlay">
			<action name="Execute">
				<execute>mpc -h serioussam@/home/yamagi/.musicpd/socket toggle</execute>
			</action>
		</keybind>

		<!-- Playback control -->
		<keybind key="XF86AudioNext">
			<action name="Execute">
				<execute>mpc -h serioussam@/home/yamagi/.musicpd/socket next</execute>
			</action>
		</keybind>

		<keybind key="XF86AudioPrev">
			<action name="Execute">
				<execute>mpc -h serioussam@/home/yamagi/.musicpd/socket prev</execute>
			</action>
		</keybind>

		<!-- Lower sound volume by 1 -->
		<keybind key="W-KP_Subtract">
			<action name="Execute">
				<execute>~/.config/openbox/setvolume.sh quieter</execute>
			</action>
		</keybind>

		<keybind key="XF86AudioLowerVolume">
			<action name="Execute">
				<execute>~/.config/openbox/setvolume.sh quieter</execute>
			</action>
		</keybind>

		<!-- Raise sound volume by 1 -->
		<keybind key="W-KP_Add">
			<action name="Execute">
				<execute>~/.config/openbox/setvolume.sh louder</execute>
			</action>
		</keybind>

		<keybind key="XF86AudioRaiseVolume">
			<action name="Execute">
				<execute>~/.config/openbox/setvolume.sh louder</execute>
			</action>
		</keybind>

		<!-- Mute volume -->
		<keybind key="W-KP_Multiply">
			<action name="Execute">
				<execute>~/.config/openbox/setvolume.sh mute</execute>
			</action>
		</keybind>

		<keybind key="XF86AudioMute">
			<action name="Execute">
				<execute>~/.config/openbox/setvolume.sh mute</execute>
			</action>
		</keybind>

		<!-- Backight control -->
		<keybind key="XF86MonBrightnessDown">
			<action name="Execute">
				<execute>xbacklight -dec +5</execute>
			</action>
		</keybind>

		<keybind key="XF86MonBrightnessUp">
			<action name="Execute">
				<execute>xbacklight -inc +5</execute>
			</action>
		</keybind>
	</keyboard>

	<!-- Mouse settings -->
	<mouse>

		<!-- Number of pixels to move before
			 dragging wof windows starts -->
		<dragThreshold>8</dragThreshold>

		<!-- Double click interval -->
		<doubleClickTime>200</doubleClickTime>

		<!-- Never change desktops when a window
			 is pushed against the screen edge -->
		<screenEdgeWarpTime>0</screenEdgeWarpTime>

		<!-- Actions to be performed somewhere in the
			 window, including the decoration -->
		<context name="Frame">

			<!-- Gain focus and raise to top -->
			<mousebind button="W-Left" action="Press">
				<action name="Focus"/>
				<action name="Raise"/>
			</mousebind>

			<!-- Gain focus and raise to top -->
			<mousebind button="W-Right" action="Press">
				<action name="Focus"/>
				<action name="Raise"/>
			</mousebind>

			<!-- Move -->
			<mousebind button="W-Left" action="Drag">
				<action name="Move"/>
			</mousebind>

			<!-- Resize -->
			<mousebind button="W-Right" action="Drag">
				<action name="Resize"/>
			</mousebind>

			<!-- Previous workspace -->
			<mousebind button="W-Down" action="Click">
				<action name="DesktopPrevious"/>
			</mousebind>

			<!-- Next workspace -->
			<mousebind button="W-Up" action="Click">
				<action name="DesktopNext"/>
			</mousebind>
		</context>

		<!-- Actions to be performed somewhere
			 in the window, excluding decoration -->
		<context name="Client">

			<!-- Raise -->
			<mousebind button="Left" action="Click">
				<action name="Raise"/>
			</mousebind>
		</context>

		<!-- Action to be performed
			 in the titlebar -->
		<context name="Titlebar">

			<!-- Raise -->
			<mousebind button="Left" action="Click">
				<action name="Raise"/>
			</mousebind>

			<!-- Drag -->
			<mousebind button="Left" action="Drag">
				<action name="Move"/>
			</mousebind>

			<!-- Toogle maximize -->
			<mousebind button="Left" action="DoubleClick">
				<action name="ToggleMaximizeFull"/>
			</mousebind>

			<!-- Shade window -->
			<mousebind button="Up" action="Click">
				<action name="Shade"/>
			</mousebind>

			<!-- Unshade window -->
			<mousebind button="Down" action="Click">
				<action name="Unshade"/>
			</mousebind>

			<!-- Show client menu -->
			<mousebind button="Right" action="Press">
				<action name="ShowMenu">
					<menu>client-menu</menu>
				</action>
			</mousebind>
		</context>

		<!-- Top edge of the window -->
		<context name="Top">

			<!-- Raise -->
			<mousebind button="Left" action="Click">
				<action name="Raise"/>
			</mousebind>

			<!-- Resize -->
			<mousebind button="Left" action="Drag">
				<action name="Resize">
					<edge>top</edge>
				</action>
			</mousebind>
		</context>

		<!-- Left edge of the window -->
		<context name="Left">

			<!-- Raise -->
			<mousebind button="Left" action="Click">
				<action name="Raise"/>
			</mousebind>

			<!-- Resize -->
			<mousebind button="Left" action="Drag">
				<action name="Resize">
					<edge>left</edge>
				</action>
			</mousebind>
		</context>

		<!-- Right edge of the window -->
		<context name="Right">

			<!-- Raise -->
			<mousebind button="Left" action="Click">
				<action name="Raise"/>
			</mousebind>

			<!-- Resize -->
			<mousebind button="Left" action="Drag">
				<action name="Resize">
					<edge>right</edge>
				</action>
			</mousebind>
		</context>

		<!-- Bottom edge of the window -->
		<context name="Bottom">

			<!-- Raise -->
			<mousebind button="Left" action="Click">
				<action name="Raise"/>
			</mousebind>

			<!-- Resize -->
			<mousebind button="Left" action="Drag">
				<action name="Resize">
					<edge>bottom</edge>
				</action>
			</mousebind>
		</context>

		<!-- Bottom left corner -->
		<context name="BLCorner">

			<!-- Raise -->
			<mousebind button="Left" action="Click">
				<action name="Raise"/>
			</mousebind>

			<!-- Resize -->
			<mousebind button="Left" action="Drag">
				<action name="Resize"/>
			</mousebind>
		</context>

		<!-- Bottom right corner -->
		<context name="BRCorner">

			<!-- Raise -->
			<mousebind button="Left" action="Click">
				<action name="Raise"/>
			</mousebind>

			<!-- Resize -->
			<mousebind button="Left" action="Drag">
				<action name="Resize"/>
			</mousebind>
		</context>

		<!-- Top left corner -->
		<context name="TLCorner">

			<!-- Raise -->
			<mousebind button="Left" action="Click">
				<action name="Raise"/>
			</mousebind>

			<!-- Resize -->
			<mousebind button="Left" action="Drag">
				<action name="Resize"/>
			</mousebind>
		</context>

		<!-- Top right corner -->
		<context name="TRCorner">

			<!-- Raise -->
			<mousebind button="Left" action="Click">
				<action name="Raise"/>
			</mousebind>

			<!-- Resize -->
			<mousebind button="Left" action="Drag">
				<action name="Resize"/>
			</mousebind>
		</context>

		<!-- The window icon in the title bar -->
		<context name="Icon">

			<!-- Raise -->
			<mousebind button="Left" action="Click">
				<action name="Raise"/>
			</mousebind>

			<!-- Client menu -->
			<mousebind button="Right" action="Press">
				<action name="ShowMenu">
					<menu>client-menu</menu>
				</action>
			</mousebind>
		</context>

		<!-- The iconify button in the title bar -->
		<context name="Iconify">

			<!-- Iconify -->
			<mousebind button="Left" action="Click">
				<action name="Iconify"/>
			</mousebind>
		</context>

		<!-- The maximize button in the title bar -->
		<context name="Maximize">

			<!-- Raise -->
			<mousebind button="Left" action="Click">
				<action name="Raise"/>
			</mousebind>

			<!-- Maximize full -->
			<mousebind button="Left" action="Click">
				<action name="ToggleMaximizeFull"/>
			</mousebind>

			<!-- Maximize vertical -->
			<mousebind button="Middle" action="Click">
				<action name="ToggleMaximizeVert"/>
			</mousebind>

			<!-- Maximize horizontal -->
			<mousebind button="Right" action="Click">
				<action name="ToggleMaximizeHorz"/>
			</mousebind>
		</context>

		<!-- The close button in the title bar -->
		<context name="Close">

			<!-- Close -->
			<mousebind button="Left" action="Click">
				<action name="Close"/>
			</mousebind>
		</context>

		<!-- The desktop -->
		<context name="Desktop">

			<!-- Previous workspace -->
			<mousebind button="Down" action="Click">
				<action name="DesktopPrevious"/>
			</mousebind>

			<!-- Previous workspace -->
			<mousebind button="W-Down" action="Click">
				<action name="DesktopPrevious"/>
			</mousebind>

			<!-- Next workspace -->
			<mousebind button="Up" action="Click">
				<action name="DesktopNext"/>
			</mousebind>

			<!-- Next workspace -->
			<mousebind button="W-Up" action="Click">
				<action name="DesktopNext"/>
			</mousebind>
		</context>

		<!-- The desktop without any invisible
			 application (like file managers)
			 over it -->
		<context name="Root">

			<!-- Window list on middle + press -->
			<mousebind button="Middle" action="Press">
				<action name="ShowMenu">
					<menu>client-list-combined-menu</menu>
				</action>
			</mousebind>

			<!-- Root window -->
			<mousebind button="Right" action="Press">
				<action name="ShowMenu">
					<menu>root-menu</menu>
				</action>
			</mousebind>
		</context>
	</mouse>

	<!-- Menu settings -->
	<menu>

		<!-- Read the root menu from rootmenu.xml -->
		<file>rootmenu.xml</file>

		<!-- Do not center submenu relativ
			 to their parent -->
		<middle>no</middle>

		<!-- Show a sub menu after 0 milliseconds -->
		<submenuShowDelay>0</submenuShowDelay>

		<!-- Display icons in the window list menu -->
		<applicationIcons>yes</applicationIcons>

		<!-- Do not manage Desktops in
			 the window list menu -->
		<manageDesktops>no</manageDesktops>
	</menu>
</openbox_config>

